<div class="m-grid__item m-grid__item--fluid m-wrapper">

  <!-- BEGIN: Subheader -->
  <div class="m-subheader ">
    <div class="d-flex align-items-center">
      <div class="mr-auto">
        <h3 class="m-subheader__title ">
          Campaigns
        </h3>
      </div>
      <div>
      </div>
    </div>
  </div>
  <!-- END: Subheader -->
  <div class="m-content">
    <!--Begin::Section-->
    <div class="row">
      <div class="col-lg-12">
        <!--Begin::Main Portlet-->
        <div class="m-portlet m-portlet--full-height">
          <!--begin: Portlet Head-->
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                  <i class="flaticon-add"></i> New campaign <%= req.query.type %>
                </h3>
              </div>
            </div>
            <div class="m-portlet__head-tools">
              <ul class="m-portlet__nav">
                <li class="m-portlet__nav-item">
                  <a href="#" data-toggle="m-tooltip" class="m-portlet__nav-link m-portlet__nav-link--icon" data-direction="left" data-width="auto" title="Get help with filling up this form">
                    <i class="flaticon-info m--icon-font-size-lg3"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <!--end: Portlet Head-->
          <!--begin: Form Wizard-->
          <div class="m-wizard m-wizard--2 m-wizard--success" id="m_wizard">
            <!--begin: Message container -->
            <div class="m-portlet__padding-x">
              <!-- Here you can put a message or alert -->
            </div>
            <!--end: Message container -->
            <!--begin: Form Wizard Head -->
            <div class="m-wizard__head m-portlet__padding-x">
              <!--begin: Form Wizard Progress -->
              <div class="m-wizard__progress">
                <div class="progress">
                  <div class="progress-bar" role="progressbar"  aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
              <!--end: Form Wizard Progress -->
              <!--begin: Form Wizard Nav -->
              <div class="m-wizard__nav">
                <div class="m-wizard__steps">
                  <div class="m-wizard__step m-wizard__step--current"  data-wizard-target="#m_wizard_form_step_1">
                    <a href="#"  class="m-wizard__step-number">
													<span style="background-color:#564ec0">
														<i class="flaticon-information"></i>
													</span>
                    </a>
                    <div class="m-wizard__step-info">
                      <div class="m-wizard__step-title">
                        1. General informations
                      </div>
                      <div class="m-wizard__step-desc">
                        Basics informations
                      </div>
                    </div>
                  </div>
                  <%if(req.query.type=='email') {%>
                  <div class="m-wizard__step" data-wizard-target="#m_wizard_form_step_2">
                    <a href="#" class="m-wizard__step-number">
													<span>
														<i class="flaticon-imac"></i>
													</span>
                    </a>
                    <div class="m-wizard__step-info">
                      <div class="m-wizard__step-title">
                        2. Template email
                      </div>
                      <div class="m-wizard__step-desc">
                        The structure of the email
                      </div>
                    </div>
                  </div>
                  <%}%>
                  <div class="m-wizard__step" data-wizard-target="#m_wizard_form_step_2">
                    <a href="#" class="m-wizard__step-number">
													<span>
														<i class="flaticon-interface-1"></i>
													</span>
                    </a>
                    <div class="m-wizard__step-info">
                      <div class="m-wizard__step-title">
                        <%if(req.query.type=='email'){%>3<%}else{%>2<%}%>. Content
                      </div>
                      <div class="m-wizard__step-desc">
                        Customize the chosen template
                      </div>
                    </div>
                  </div>

                  <div class="m-wizard__step" data-wizard-target="#m_wizard_form_step_2">
                    <a href="#" class="m-wizard__step-number">
													<span>
														<i class="flaticon-list-3"></i>
													</span>
                    </a>
                    <div class="m-wizard__step-info">
                      <div class="m-wizard__step-title">
                        <%if(req.query.type=='email'){%>4<%}else{%>3<%}%>. Destination
                      </div>
                      <div class="m-wizard__step-desc">
                        Lists and segments
                      </div>
                    </div>
                  </div>
                  <div class="m-wizard__step" data-wizard-target="#m_wizard_form_step_3">
                    <a href="#" class="m-wizard__step-number">
													<span>
														<i class="fa  fa-check"></i>
													</span>
                    </a>
                    <div class="m-wizard__step-info">
                      <div class="m-wizard__step-title">
                        <%if(req.query.type=='email'){%>5<%}else{%>4<%}%>. Confirmation
                      </div>
                      <div class="m-wizard__step-desc">
                        Validation of the campaign and and schedule
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!--end: Form Wizard Nav -->
            </div>
            <!--end: Form Wizard Head -->
            <!--begin: Form Wizard Form-->
            <div class="m-wizard__form">
              <!--
            1) Use m-form--label-align-left class to alight the form input lables to the right
            2) Use m-form--state class to highlight input control borders on form validation
            -->
              <form class="m-form m-form--label-align-left- m-form--state-" id="m_form_campaign" action="/campaigns/new/?type=<%= req.query.type %>&step=2" method="POST" enctype="multipart/form-data">
                <!--begin: Form Body -->
                <div class="m-portlet__body">
                  <div class="m-form__content">
                      <div class="m-alert m-alert--icon alert alert-warning m--hide" role="alert" id="m_form_2_msg">
                        <div class="m-alert__icon">
                          <i class="la la-warning"></i>
                        </div>
                        <div class="m-alert__text">
                          Oh snap! Change a few things up and try submitting again.
                        </div>
                        <div class="m-alert__close">
                          <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                      </div>
                  </div>
                  <div class="form-group m-form__group">
                    <label for="name">
                      Name *
                    </label>
                    <input class="form-control m-input m-input--air" id="name" name="name"  placeholder="Enter name" type="text">
                  </div>
                  <div class="form-group m-form__group">
                    <label for="object">
                      Object *
                    </label>
                    <input class="form-control m-input m-input--air" id="object" name="object"  placeholder="Enter object" type="text">
                  </div>
                  <div class="form-group m-form__group">
                    <label for="nameSender">
                      Name of the sender *
                    </label>
                    <input class="form-control m-input m-input--air" id="nameSender" name="nameSender"  placeholder="Enter name of the sender" type="text">
                  </div>
                  <div class="form-group m-form__group">
                    <label for="EmailSender">
                      Email of the sender *
                    </label>
                    <select class="form-control m-input m-input--air" name="emailSender"  id="emailSender" required>
                      <option value="errouissi">errouissimusta@gmail.com</option>
                    </select>
                  </div>
                  <div class="form-group m-form__group">
                    <label for="language">
                      language
                    </label>
                    <select class="form-control m-input m-input--air " name="language" required>
                      <option value="english">English</option>
                      <option value="english">French</option>
                      <option value="italie">Italie</option>
                    </select>
                  </div>

                  <div class="form-group m-form__group">
                    <label for="client">
                      client
                    </label>
                    <select class="form-control m-input m-input--air" name="client" required>
                      <option value="Berkoukt youness">Berkoukt youness</option>
                      <option value="Zarhani hassan">Zarhani hassan</option>
                      <option value="Rouissy Farid">Rouissy Farid</option>
                    </select>
                  </div>

                  <div class="form-group m-form__group">
                    <label for="tags">
                      Tags
                    </label><br>
                    <input type="text" name="tags" value="" data-role="tagsinput" id="tags" class="form-control m-input m-input--air">
                  </div>

                  <div class="form-group m-form__group" id="formAttachment">
                    <label for="ImportFile">
                      Attachments
                    </label>
                    <div class="controls">
                      <div class="entry input-group col-xs-3">
                        <input class="btn btn-brand" name="attachment[]" type="file">
                          <button class="btn btn-success btn-add" type="button">
                                 <span class="fa fa-plus"></span>
                          </button>
                      </div>
                    </div>
                    <small id="emailHelp" class="form-text text-muted">Type allowed : .pdf | .word | .rar </small>
                  </div>
                </div>
                <!--end: Form Body -->
                <!--begin: Form Actions -->
                <div class="m-portlet__foot m-portlet__foot--fit">
                  <div class="m-form__actions">
                    <button type="reset" class="btn btn-secondary">
                      Cancel
                    </button>
                    <button href="#" type="submit" class="btn m-btn m-btn--custom m-btn--icon btn-brand" data-wizard-action="next">
															<span>
																<span>
																	Save &amp; Continue
																</span>
																&nbsp;&nbsp;
																<i class="la la-arrow-right"></i>
															</span>
                    </button>
                  </div>
                </div>

                <!--end: Form Actions -->
              </form>
            </div>
            <!--end: Form Wizard Form-->
          </div>
          <!--end: Form Wizard-->
        </div>
        <!--End::Main Portlet-->
      </div>
    </div>
    <!--End::Section-->
  </div>
</div>
<% block('localScripts', '<script src="/bootstrap-tagsinput-latest/bootstrap-tagsinput.js" type="text/javascript"></script>'+
  '<script src="/js/campaigns/new-step1.js" type="text/javascript"></script>') %>
<% block('localStyles', '<link rel="stylesheet"  href="/bootstrap-tagsinput-latest/bootstrap-tagsinput.css">') %>




