
<div class="container" id="page-content">
  <div class="row">
    <div class="col-md-12">
      <h4>lists </h4>
      <a href="/lists/new"><button type="button" class="btn btn-primary">Add list</button></a>
      <div class="table-responsive">
        <table id="mytable" class="table table-bordred table-striped">
          <thead>
          <th><input type="checkbox" id="checkall" /></th>
          <th>Name</th>
          <th>Number of lists</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
          </thead>
          <tbody>
          <% _.each(model, function (list) { %>
          <tr>
            <td><input type="checkbox" class="checkthis" /></td>
            <td><%= list.name %></td>
            <td><%= list.subscribers.length %></td>
            <td><a href="/lists/show?id=<%= list.id %>"><i class="fas fa-search-plus"></i><span>Show</span></a></td>
            <td><a href="/lists/edit/?id=<%= list.id %>"><i class="fa fa-edit"></i><span>Edit</span></a></td>
            <td><a href="/lists/destroy/?id=<%= list.id %>"><i class="fa fa-trash"></i><span>Delete</span></a></td>
            <% }) %>
          </tr>
          </tbody>
        </table>
        <div class="clearfix"></div>
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
          </ul>
        </nav>

      </div>

    </div>
  </div>
</div>

