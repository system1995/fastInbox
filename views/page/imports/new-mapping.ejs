
<div class="container" id="page-content">
  <h2>Mapping</h2>
  <div class="table-responsive">
    <form action="/imports/create" method="POST" >
      <table id="mytable" class="table table-bordred table-striped">
        <thead>
        <th><input type="checkbox" id="checkall" /></th>
        <th>Database Field</th>
        <th>Line 1 </th>
        <th>Line 2</th>
        </thead>
        <tbody>
        <%for(var key in first2Line) {%>
          <tr>
            <td><input type="checkbox" class="checkthis" /></td>
            <td>
                <select name="select<%=Object.keys(first2Line).indexOf(key)%>">
                  <option value="name">Name</option>
                  <option value="email">Email</option>
                  <option value="phoneNumber">Phone Number</option>
                </select>
              <button class="btn btn-success btn-add btn-sm" type="button">
                <span class="fas fa-plus fa-lg"></span>
              </button>
              <button class="btn btn-danger btn-remove btn-sm" type="button">
                <span class="fas fa-minus fa-lg"></span>
              </button>
            </td>
            <td><%=key%></td>
            <td><%=first2Line[key]%></td>
          </tr>
        <%}%>
        <tbody>
      </table>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>

