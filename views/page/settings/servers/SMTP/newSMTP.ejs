<div class="m-grid__item m-grid__item--fluid m-wrapper">
  <!-- BEGIN: Subheader -->
  <div class="m-subheader ">
    <div class="d-flex align-items-center">
      <div class="mr-auto">
        <h3 class="m-subheader__title ">
          Servers
        </h3>
      </div>
      <div>
      </div>
    </div>
  </div>
  <!-- END: Subheader -->
  <div class="m-content">
    <!--Begin::Section-->
    <div class="row">
      <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet m-portlet--mobile">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                  <i class="flaticon-add"></i> Server SMTP <small>SMTP</small>
                </h3>
              </div>
            </div>
            <div class="m-portlet__head-tools">
              <ul class="m-portlet__nav">
              </ul>
            </div>
          </div>
          <form class="m-form"  id="m_form_newSMTP" action="/settings_servers/create?category=SMTP&type=MailJet" method="POST">
            <div class="m-portlet__body">
               <div class="m-section">
                        <strong class="m-section__sub">
                          General Information:
                        </strong>
                <div class="m-section__content">
                  <div class="m-demo" data-code-preview="true" data-code-html="true" data-code-js="false">
                    <div class="m-demo__preview">
                      <!--begin::Form-->
                      <div class="form-group m-form__group row">
                        <div class="col-lg-4">
                          <label>
                            Name:
                          </label>
                          <input class="form-control m-input" placeholder="Name" name="name" id="name">
                          <span class="m-form__help">
                            The name of the server to make a distinction if having multiple servers with same hostname.
                            </span>
                        </div>
                        <div class="col-lg-4">
                          <label>
                            HostName:
                          </label>
                            <input class="form-control m-input" placeholder="smtp.your-server.com" name="hostName" id="hostName">
                          <span class="m-form__help">
                              The hostname of your SMTP server.
                            </span>
                        </div>
                        <div class="col-lg-4">
                          <label class="">
                            UserName:
                          </label>
                          <input class="form-control m-input"  placeholder="you@domain.com"  name="userName" id="userName">
                          <span class="m-form__help">
                              The username of your SMTPServer.
                            </span>
                        </div>
                      </div>
                      <div class="form-group m-form__group row">
                        <div class="col-lg-4">
                          <label>
                            Password:
                          </label>
                          <input class="form-control m-input" type="password" name="password" placeholder="your smtp account password">
                          <span class="m-form__help">
                              The password of your SMTP server.
                          </span>
                        </div>
                        <div class="col-lg-4">
                          <label class="">
                            Port:
                          </label>
                          <input class="form-control m-input" value="42"   name="port" id="port" type="number">
                          <span class="m-form__help">
                              The port of your SMTP server, usually this is 25.
                            </span>
                        </div>
                        <div class="col-lg-4">
                          <label class="">
                            Protocol:
                          </label>
                          <select class="form-control m-input m-input--square" id="protocol" name="protocol">
                            <option value="TLS">
                              TLS
                            </option>
                            <option value="SSL">
                              SSL
                            </option>
                            <option value="STARTLS">
                              STARTTLS
                            </option>
                          </select>
                          <span class="m-form__help">
                              The security protocol used to access this server.
                            </span>
                        </div>
                      </div>
                      <div class="form-group m-form__group row">
                        <div class="col-lg-4">
                          <label>
                            From name:
                          </label>
                          <input class="form-control m-input" placeholder="From name">
                          <span class="m-form__help">
                              The default name used in the FROM header, together with the FROM email.
                          </span>
                        </div>
                      </div>
                      <!--end::Form-->
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit">
              <div class="m-form__actions m--align-right">
                <button type="submit" class="btn btn-brand">
                  <span>
                    <span>
                      Submit &nbsp;
                    </span>
                    &nbsp;&nbsp;
                    <i class="fa fa-save"></i>
                  </span>
                </button>
              </div>
            </div>
          </form>
        </div>
        <!--end::Portlet-->
      </div>
    </div>
    <!--End::Section-->
  </div>
</div>

