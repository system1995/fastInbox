
<div class="m-grid__item m-grid__item--fluid m-wrapper">
  <!-- BEGIN: Subheader -->
  <div class="m-subheader ">
    <div class="d-flex align-items-center">
      <div class="mr-auto">
        <h3 class="m-subheader__title ">
          Subscribers
        </h3>
      </div>
      <div>
      </div>
    </div>
  </div>
  <!-- END: Subheader -->
  <div class="m-content">
    <!--Begin::Section-->
    <div class="row">
      <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet m-portlet--tab">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
												<span class="m-portlet__head-icon m--hide">
													<i class="la la-gear"></i>
												</span>
                <h3 class="m-portlet__head-text">
                  <i class="flaticon-edit-1"></i> Edit Subscriber
                </h3>
              </div>
            </div>
          </div>
          <!--begin::Form-->
          <form class="m-form m-form--state m-form--fit m-form--label-align-right" id="m_form_subscriber" action="/subscriber/update?id=<%= subscriber.id %>" method="POST">
            <div class="m-portlet__body">
              <div class="m-form__section m-form__section--first">
                <div class="m-form__heading">
                  <h3 class="m-form__heading-title">1. General Info:</h3>
                </div>
                <div class="m-form__content">
                  <div class="m-alert m-alert--icon alert alert-warning m--hide" role="alert" id="m_form_2_msg">
                    <div class="m-alert__icon">
                      <i class="la la-warning"></i>
                    </div>
                    <div class="m-alert__text">
                      Oh snap! Change a few things up and try submitting again.
                    </div>
                    <div class="m-alert__close">
                      <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                    </div>
                  </div>
                </div>
                <div class="form-group m-form__group">
                  <label for="fullName">
                    Full Name *
                  </label>
                  <input class="form-control m-input m-input--air" id="fullName" name="fullName" value="<%= subscriber.fullName%>" aria-describedby="fullNameHelp" placeholder="Enter Full Name" type="text">
                </div>

                <div class="form-group m-form__group">
                  <label for="email">
                    Email *
                  </label>
                  <div class="input-group">
                    <input class="form-control m-input" id="email" name="email" value="<%= subscriber.email%>" placeholder="Enter phone" type="text">
                    <span class="input-group-btn">
                            <a href="#" class="btn btn-brand">
                              <i class="la la-envelope"></i>
                            </a>
                          </span>
                  </div>
                </div>

                <div class="form-group m-form__group">
                  <label for="phoneNumber">
                    Phone Number *
                  </label>
                  <div class="input-group">
                    <input class="form-control m-input" id="phoneNumber" name="phoneNumber" value="<%= subscriber.phoneNumber%>" placeholder="Enter phone" type="text">
                    <span class="input-group-btn">
                            <a href="#" class="btn btn-brand">
                              <i class="la la-phone"></i>
                            </a>
                          </span>
                  </div>
                </div>

                <div class="form-group m-form__group">
                  <label for="lists">
                    Lists
                  </label>
                  <div class="input-group">
                    <select multiple="" class="form-control m-input m-input--air"  id="lists[]" name="lists[]">
                      <% _.each(lists, function (list) { %>
                      <option value="<%= list.id %>" <% if(_.pluck(subscriber.lists, 'id').includes(list.id)){%> selected<%}%> ><%= list.name %></option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <div id="m_repeater_1">
                  <div class="form-group  m-form__group" id="m_repeater_1">
                    <label> Additional </label>
                    <div data-repeater-list="">
                      <% for(var key in subscriber) {
                      if(key.startsWith('ex_'))
                      { %>
                      <div data-repeater-item="" class="subscriberAdditional form-group m-form__group row align-items-center" style="">
                        <div class="col-md-5">
                          <div class="m-form__group m-form__group--inline">
                            <div class="m-form__label">
                              <label>
                                Name:
                              </label>
                            </div>
                            <div class="m-form__control">
                              <input class="form-control m-input addedField" value="<%=key.slice(3)%>"  placeholder="Enter name" type="text" required>
                            </div>
                          </div>
                          <div class="d-md-none m--margin-bottom-10"></div>
                        </div>
                        <div class="col-md-5">
                          <div class="m-form__group m-form__group--inline">
                            <div class="m-form__label">
                              <label class="m-label m-label--single">
                                Value:
                              </label>
                            </div>
                            <div class="m-form__control">
                              <input class="form-control m-input valueField" name="<%= key %>" id="<%= key %>"  value="<%= subscriber[key] %>" placeholder="Enter value" required>
                            </div>
                          </div>
                          <div class="d-md-none m--margin-bottom-10"></div>
                        </div>
                        <div class="col-md-2">
                          <div data-repeater-delete="" class="btn-sm btn btn-danger m-btn m-btn--icon m-btn--pill">
                                  <span>
                                    <i class="la la-trash-o"></i>
                                    <span>
                                      Delete
                                    </span>
                                  </span>
                          </div>
                        </div>
                      </div>
                      <%}}%>
                      <div data-repeater-item="" class="subscriberAdditional form-group m-form__group row align-items-center" style="">
                        <div class="col-md-5">
                          <div class="m-form__group m-form__group--inline">
                            <div class="m-form__label">
                              <label>
                                Name:
                              </label>
                            </div>
                            <div class="m-form__control">
                              <input class="form-control m-input addedField" placeholder="Enter name" type="text" required>
                            </div>
                          </div>
                          <div class="d-md-none m--margin-bottom-10"></div>
                        </div>
                        <div class="col-md-5">
                          <div class="m-form__group m-form__group--inline">
                            <div class="m-form__label">
                              <label class="m-label m-label--single">
                                Value:
                              </label>
                            </div>
                            <div class="m-form__control">
                              <input class="form-control m-input valueField" placeholder="Enter value" required>
                            </div>
                          </div>
                          <div class="d-md-none m--margin-bottom-10"></div>
                        </div>
                        <div class="col-md-2">
                          <div data-repeater-delete="" class="btn-sm btn btn-danger m-btn m-btn--icon m-btn--pill">
                                  <span>
                                    <i class="la la-trash-o"></i>
                                    <span>
                                      Delete
                                    </span>
                                  </span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="m-form__group form-group row">
                    <label class="col-lg-2 col-form-label"></label>
                    <div class="col-lg-4">
                      <div data-repeater-create="" class="btn btn btn-sm btn-brand m-btn m-btn--icon m-btn--pill m-btn--wide">
                              <span>
                                <i class="la la-plus"></i>
                                <span>
                                  Add
                                </span>
                              </span>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="m-form__seperator m-form__seperator--dashed m-form__seperator--space"></div>
              </div>

              <div class="m-form__section m-form__section--last">
                <div class="m-form__heading">
                  <h3 class="m-form__heading-title">2. Audience:</h3>
                </div>
                <%var model=subscriber%>
                <% include ../audience.ejs %>
              </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit">
              <div class="m-form__actions">
                <button type="submit" class="btn btn-brand">
                  Submit
                </button>
                <button type="reset" class="btn btn-secondary">
                  Cancel
                </button>
              </div>
            </div>
          </form>
          <!--end::Form-->
        </div>
        <!--end::Portlet-->
      </div>
    </div>
    <!--End::Section-->
  </div>
</div>
<% block('localScripts', '<script src="/js/subscribers/edit.js" type="text/javascript"></script>') %>



