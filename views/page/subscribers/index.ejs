
<div class="container" id="page-content">
  <div class="row">
    <div class="col-md-12">
      <h4>Subscribers </h4>
      <a href="/subscribers/new"><button type="button" class="btn btn-primary">Add subscriber</button></a>
      <div class="table-responsive">
        <table id="mytable" class="table table-bordred table-striped">
          <thead>
          <th><input type="checkbox" id="checkall" /></th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone number</th>
          <th>Status</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
          </thead>
          <tbody>
          <% _.each(model, function (subscriber) { %>
          <tr>
            <td><input type="checkbox" class="checkthis" /></td>
            <td><%= subscriber.name %></td>
            <td><%= subscriber.email %></td>
            <td><%= subscriber.phoneNumber %></td>
            <td><%= subscriber.status %></td>
            <td><a data-toggle="modal" data-target="#myModal"><i class="fas fa-search-plus"></i><span>Show</span></a></td>
            <td><a href="/subscribers/edit/?id=<%= subscriber.id %>"><i class="fa fa-edit"></i><span>Edit</span></a></td>
            <td><a href="/subscribers/destroy/?id=<%= subscriber.id %>"><i class="fa fa-trash"></i><span>Delete</span></a></td>

            <div class="modal fade" id="myModal" role="dialog">
              <div class="modal-dialog modal-lg">
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title">Show</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                  </div>
                  <div class="modal-body">
                    <% for(var key in subscriber) {
                      if (subscriber.hasOwnProperty(key)) {
                    %>
                    <%=key%> :  <%=JSON.stringify(subscriber[key])%> <br>
                    <%}}%>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>

            <% }) %>
          </tr>
          </tbody>
        </table>

        <div class="clearfix"></div>
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
          </ul>
        </nav>

      </div>

    </div>
  </div>
</div>

