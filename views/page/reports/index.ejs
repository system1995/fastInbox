<div class="m-grid__item m-grid__item--fluid m-wrapper">
  <!-- BEGIN: Subheader -->
  <div class="m-subheader ">
    <div class="d-flex align-items-center">
      <div class="mr-auto">
        <h3 class="m-subheader__title ">
          Reports
        </h3>
      </div>
      <div>
      </div>
    </div>
  </div>
  <!-- END: Subheader -->
  <div class="m-content">
    <!--Begin::Section-->
    <div class="row">
      <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet m-portlet--mobile">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                  <i class="flaticon-statistics"></i> Reports<small>of your campaigns</small>
                </h3>
              </div>
            </div>
            <div class="m-portlet__head-tools">
              <ul class="m-portlet__nav">
              </ul>
            </div>
          </div>
          <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
              <div class="row">
                <div class="col-xl-12 m--align-right">
                  <a href="/lists/new" class="btn btn-brand  m-btn--pill m-btn btn btn-brand m-btn m-btn--custom m-btn--bolder">
												<span>
													<i class="fa fa-download"></i>
													<span>
														Export campaign report
													</span>
												</span>
                  </a>
                  <a href="/lists/new" class="btn btn-brand  m-btn--pill m-btn btn btn-brand m-btn m-btn--custom m-btn--bolder">
												<span>
													<i class="fa fa-download"></i>
													<span>
														Export global report
													</span>
												</span>
                  </a>
                  <div class="m-separator m-separator--dashed d-xl-none"></div>
                </div>
              </div>
            </div>

            <form class="m-form">
              <div class="m-section">
                <div class="m-section__content">
                  <div class="m-demo" data-code-preview="true" data-code-html="true" data-code-js="false">
                    <div class="m-demo__preview">
                      <!--begin::Form-->
                      <div class="form-group m-form__group row">
                        <div class="col-lg-4">
                          <select class="form-control m-input" id="exampleSelect1">
                            <option>
                              All your campaigns
                            </option>
                            <option>
                              CampaignOne
                            </option>
                            <option>
                              CampaignTwo
                            </option>
                            <option>
                              CampaignTree
                            </option>
                          </select>
                        </div>

                        <label class="col-form-label col-lg-1">
                          Start Date
                        </label>
                        <div class="col-lg-3 col-md-9 col-sm-12">
                          <div class="input-group date">
                            <input class="form-control m-input" readonly="" placeholder="Select date" id="m_datepicker_1_validate" type="text">
                            <div class="input-group-append">
                              <span class="input-group-text">
                                <i class="la la-calendar-check-o"></i>
                              </span>
                            </div>
                          </div>
                        </div>

                        <label class="col-form-label col-lg-1">
                          End Date
                        </label>
                        <div class="col-lg-3 col-md-9 col-sm-12">
                          <div class="input-group date">
                            <input class="form-control m-input" readonly="" placeholder="Select date" id="m_datepicker_2_validate" type="text">
                            <div class="input-group-append">
                              <span class="input-group-text">
                                <i class="la la-calendar-check-o"></i>
                              </span>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="m-section">
                <canvas id="myChart" width="400" height="100"></canvas>
                <div class="m-form__seperator m-form__seperator--dashed m-form__seperator--space"></div>
                <h2 class="text-center"> You have sents 3,066 emails, including 22 campaigns </h2>
              </div>
              <div class="m-section">
                <div class="row">
                  <div class="col-lg-4 offset-lg-1">
                  <p>
                    <strong class="m--font-bolder">Total</strong>
                    <strong class="m--font-primary pull-right">0</strong>
                  </p>
                  <hr class="hopHr">
                  <p>
                    <strong class="m--font-bolder">Delivered</strong>
                    <strong class="m--font-primary pull-right">0</strong>
                    <br><small class="pull-right">0%</small>
                  </p>
                  <hr class="hopHr">
                  <p>
                    <strong class="m--font-bolder">Open</strong>
                    <strong class="m--font-primary pull-right">0</strong>
                    <br><small class="pull-right">0%</small>
                  </p>
                  <hr class="hopHr">
                  <p>
                    <strong class="m--font-bolder">Clicked</strong>
                    <strong class="m--font-primary pull-right">0</strong>
                    <br><small class="pull-right">0%</small>
                  </p>
                  <hr class="hopHr">
                  <p>
                    <strong class="m--font-bolder">Blocked</strong>
                    <strong class="m--font-primary pull-right">0</strong>
                    <br><small class="pull-right">0%</small>
                  </p>
                  <hr class="hopHr">
                  <p>
                    <strong class="m--font-bolder">Spam</strong>
                    <strong class="m--font-primary pull-right">0</strong>
                    <br><small class="pull-right">0%</small>
                  </p>
                  <hr class="hopHr">
                  <p>
                    <strong class="m--font-bolder">Bounce</strong>
                    <strong class="m--font-primary pull-right">0</strong>
                    <br><small class="pull-right">0%</small>
                  </p>
                </div>
                  <div class="col-lg-4 offset-lg-2">
                    <canvas id="pie-chart" width="2300" height="1950"></canvas>
                  </div>
                </div>
              </div>
              <div class="m-section">
                <div id="m_jqvmap_world" class="m-jqvmap" style="height:500px;width:3000px"></div>
              </div>
            </form>
          </div>
        </div>
        <!--end::Portlet-->
      </div>
    </div>
    <!--End::Section-->
  </div>
</div>


<% block('localStyles', '<link rel="stylesheet" href="/styles/reports/index.css">'+
  '<link href="/vendors/custom/jqvmap/jqvmap.bundle.css" rel="stylesheet" type="text/css" />') %>

<% block('localScripts', '<script src="/demo/default/custom/components/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>'+
  '<script src="/chart.js/dist/Chart.js"></script>'+
  '<script src="/js/reports/index.js"></script>' +
  '<script src="/vendors/custom/jqvmap/jqvmap.bundle.js" type="text/javascript"></script>') %>



