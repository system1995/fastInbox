<div class="m-grid__item m-grid__item--fluid m-wrapper">
  <!-- BEGIN: Subheader -->
  <div class="m-subheader ">
    <div class="d-flex align-items-center">
      <div class="mr-auto">
        <h3 class="m-subheader__title ">
          Emails template
        </h3>
      </div>
      <div>
      </div>
    </div>
  </div>
  <!-- END: Subheader -->
  <div class="m-content">
    <!--Begin::Section-->
    <div class="row">
      <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet m-portlet--mobile">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                  <i class="flaticon-imac"></i> Emails template<small>All your emails template</small>
                </h3>
              </div>
            </div>
            <div class="m-portlet__head-tools">
              <ul class="m-portlet__nav">
              </ul>
            </div>
          </div>
          <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
              <div class="row align-items-center">
                <div class="col-xl-8 order-2 order-xl-1">
                  <div class="form-group m-form__group row align-items-center">
                    <div class="col-md-4">
                      <div class="m-form__group m-form__group--inline">
                        <div class="m-form__label">
                          <label>
                            Category:
                          </label>
                        </div>
                        <div class="m-form__control">
                          <select class="form-control m-bootstrap-select" id="m_form_category">
                            <option value="">
                              All
                            </option>
                            <option value="trade">
                              Trade
                            </option>
                            <option value="leadOpportunity">
                              Lead Opportunity
                            </option>
                            <option value="organization">
                              Organization
                            </option>
                            <option value="task">
                              Task
                            </option>
                            <option value="project">
                              Project
                            </option>
                          </select>
                        </div>
                      </div>
                      <div class="d-md-none m--margin-bottom-10"></div>
                    </div>

                    <div class="col-md-4">
                      <div class="m-input-icon m-input-icon--left">
                        <input type="text" class="form-control m-input  m-input--solid" placeholder="Search..." id="generalSearch">
                        <span class="m-input-icon__icon m-input-icon__icon--left">
															<span>
																<i class="la la-search"></i>
															</span>
														</span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                  <a href="/emailsTemplate/new" class="btn btn-brand  m-btn--pill m-btn btn btn-brand m-btn m-btn--custom m-btn--bolder">
												<span>
													<i class="flaticon-add-circular-button"></i>
													<span>
														Import email template
													</span>
												</span>
                  </a>
                  <div class="m-separator m-separator--dashed d-xl-none"></div>
                </div>
              </div>
            </div>


            <div class="container">
              <% _.each(emailsTemplate, function (emailTemplate,i) { if(!(i%4)) {%>
              <div class="row">
                <%}%>
                <div class="col-md-3">
                  <div class="thumbnail">
                    <div class="caption">
                      <h4><%=emailTemplate.name+i%></h4>
                      <p><%=emailTemplate.description%></p>
                      <p><a href=""><button type="button" class="btn btn-danger">Delete</button></a>
                        <a href="/emailsTemplate/edit/?id=<%= emailTemplate.id %>"><button type="button" class="btn btn-success">Edit</button></a></p>
                    </div>
                    <img src="/files/emailstemplate/<%=emailTemplate.id%>/screenShot.jpg" width="400" height="400" class="img-thumbnail" alt="...">
                  </div>
                </div>
              <% if(!((i+1)%4) || i+1==emailsTemplate.length)  {%>
              </div>
               </br>
              <%}})%>

            </div><!-- /.container -->
          </div>
        </div>
        <!--end::Portlet-->
      </div>
    </div>


    <!--End::Section-->
  </div>
</div>
<% block('localScripts', '<script src="/js/emailsTemplate/index.js" type="text/javascript"></script>') %>
<% block('localStyles', '<link rel="stylesheet" href="/styles/emailsTemplate/index.css">') %>
